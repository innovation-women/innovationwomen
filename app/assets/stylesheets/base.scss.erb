$blue: #003a79;
$red: #ec3936;
$text: #484848;

$small: 9px;


body {
  padding: 0;
  margin: 0 auto;
  color: $text;
  width: 992px;
}

a, a:hover, a:visited {
  color: #163A76;
  text-decoration: none;
  background-color: transparent;
  
  &.highlighted, &.highlighted:hover, &.highlighted:visited {
    color: #3174C3;
  }
}

.right {
  float: right;
}

.small {
  font-size: 11px;
}

.content {
  p, td {    
    font-size: 14px;
  }

  .textblock {
    p {
      line-height:1.6;
    }

    width:550px;
    text-align: center;
    margin: auto;
    padding:100px 60px;
  }
}

.btn-primary {
  a, a:hover, a:visited {
    background-color: $blue;
    padding: 21px 30px;
    color: white;
    line-height: 60px;    
  }
}

form {
  table {
    padding-top: 12px;

    .hint {
      td {
        color: #aaa;
        font-size: $small;
        padding-bottom: 24px;
      }
    }

    td {
      text-align: left;
      width: 210px;

      label {
        font-weight: bold;
      }

      input, textarea, button {
        border: 1px solid #ccc;
        padding: 3px;
        font-size: 1em;
      }

      input {
        width: 300px;
      }

      textarea {
        height: 120px;
        width: 360px;
      }
    }
  }

  .actions {
    margin-bottom: 60px;
    background-color: transparent;
    text-align: center;

    input {
      padding: 3px;
      font-size: 1.5em;
    }
  }

}