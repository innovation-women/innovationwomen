$blue: #003a79;
$red: #ec3936;
$text: #484848;

body {
  padding: 0;
  margin: 0 auto;
  color: $text;
  width: 992px;
}

a, a:hover, a:visited {
  color: #163A76;
  text-decoration: none;
  background-color: transparent;
  
  &.highlighted, &.highlighted:hover, &.highlighted:visited {
    color: #3174C3;
  }
}

.right {
  float: right;
}

.small {
  font-size: 11px;
}

.content {
  p, td {    
    font-size: 14px;
  }
}

.btn-primary {
  a, a:hover, a:visited {
    background-color: $blue;
    padding: 21px 30px;
    color: white;
    line-height: 60px;    
  }
}

form {
  table {
    padding-top: 12px;
    td {
      text-align: left;
      width: 210px;
      font-weight: bold;
      padding-bottom: 24px;
    }
  }
}