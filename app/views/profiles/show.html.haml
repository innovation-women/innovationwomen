.profiles
  .profile
    .profile-content
      = image_tag @profile.picture.url
      %h1.name= @profile.name
      %p.location= @profile.location
      
      %table
        %tbody
          %tr
            %td Title
            %td.title-info= @profile.title
          %tr
            %td Industry
            %td.title-info= @profile.industry
          %tr
            %td Company
            %td.title-info= @profile.company
  .details
    .details-content
      %h2.description= @profile.description


-#
  %p#notice= notice

  %p
    %b Name:
    = @profile.name
  %p
  %p
    %b Location:
    = @profile.location
  %p
    %b Title:
    = @profile.title
  %p
    %b Industry:
    = @profile.industry
  %p
    %b Description:
  
  %p
    %b Twitter:
    = @profile.twitter
  %p
    %b Linkedin:
    = @profile.linkedin
  %p
    %b Website:
    = @profile.website

  = link_to 'Edit', edit_profile_path(@profile)
  \|
  = link_to 'Back', profiles_path
