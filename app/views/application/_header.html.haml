.header
  .right
    .search.small
      = form_tag({controller: 'profiles', action: 'search'}, method: :get) do
        = text_field_tag :search, params[:search], :id => 'search_field'
        = submit_tag 'Search', :name => nil

    .links.small
      = link_to 'About', root_path
      = link_to 'For Event Managers', root_path
      = link_to 'For Speakers', root_path
      = link_to 'Organizations', root_path
      = link_to 'Events', root_path
  = link_to image_tag('logo_45.jpg'), root_path
  
.header_image
  = yield :head
  
