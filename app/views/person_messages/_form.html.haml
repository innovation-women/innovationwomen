= form_for @person_message do |f|
  - if @person_message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person_message.errors.count, "error")} prohibited this person_message from being saved:"
      %ul
        - @person_message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :person_id
    = f.number_field :person_id
  .field
    = f.label :message_id
    = f.number_field :message_id
  .actions
    = f.submit 'Save'
